# Environment Variables for Terra Cloud Functions
# Copy this file to .env for local development

# Google Cloud Project Configuration
GCLOUD_PROJECT=your-project-id
FIREBASE_PROJECT_ID=your-project-id

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Function Configuration
CLEANUP_EFFECTIVENESS_THRESHOLD=70
LOCATION_VERIFICATION_RADIUS_METERS=100
MAX_IMAGE_SIZE_MB=10
VISION_API_TIMEOUT_MS=30000

# Development Settings
DEBUG_FUNCTIONS=false
NODE_ENV=development

# Test Configuration
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Logging
LOG_LEVEL=info

# Rate Limiting
VISION_API_RATE_LIMIT_PER_MINUTE=1000
FUNCTION_MEMORY_MB=1024
FUNCTION_TIMEOUT_SECONDS=540